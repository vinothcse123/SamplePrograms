#include<iostream>

int main()
{
   using namespace std;

   unsigned int ui=0;
   int i=-10;
   ui=(unsigned int)i; // 10 will not be stored in ui
   printf("\nUsing type casting");
   cout<<"\nUNSIGNED COUT using type casting"<<ui;
   printf("\nUNSIGNED PRINTF using type casting(%%d)  :: %d ",ui ); 
   printf("\nUNSIGNED PRINTF using type casting(%%u) :: %u ",ui ); 

    ui=abs(i);
    printf("\n\nUsing absoulte function");
   cout<<"\nUNSIGNED COUT using abs "<<ui;
   printf("\nUNSIGNED PRINTF using abs(%%d)  :: %d ",ui ); 
   printf("\nUNSIGNED PRINTF using abs(%%u)  :: %u ",ui ); 


    ui=(UINT_MAX+1)-i;
    printf("Uint value after adding 1 %u",UINT_MAX+1);
    printf("\n\nUsing UINT MAX function (uint max value: %u)",UINT_MAX);
    cout<<"\nUNSIGNED COUT using abs "<<ui;
   printf("\nUNSIGNED PRINTF using abs(%%d)  :: %d ",ui ); 
   printf("\nUNSIGNED PRINTF using abs(%%u)  :: %u ",ui ); 
    
    

    



   return 0;
}


